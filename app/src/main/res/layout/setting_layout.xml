<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/up_word_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_common_split_line"
        android:text="@string/up_words"
        android:textSize="18sp" />

    <!-- List -->
    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/up_word_list"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_below="@id/up_word_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/up_word_list"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <!-- 输入框 -->
        <EditText
            android:id="@+id/up_word_add_input"
            android:layout_width="300dp"
            android:layout_height="match_parent" />

        <!-- 增加button -->
        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/up_word_add_btn"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/add"
            android:textAlignment="center"
            android:textSize="6sp"></com.gc.materialdesign.views.ButtonRectangle>

    </LinearLayout>

</RelativeLayout>